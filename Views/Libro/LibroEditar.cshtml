@model ProyectoNukeMapuPewmaMVC.Models.Libro;
@{
    ViewData["Title"] = "Modificar Libro";
}


<div class="text-central">
    <h1 class="display-4">Modificar Libro</h1>
    

    <form asp-action="LibroEditar" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label>Nombre</label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Autor</label>
            <input asp-for="Autor" class="form-control" />
            <span asp-validation-for="Autor" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Editorial</label>
            <input asp-for="Editorial" class="form-control" />
            <span asp-validation-for="Editorial" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Categoria</label>
            <input asp-for="Categoria" class="form-control" />
            <span asp-validation-for="Categoria" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Fecha</label>
            <input asp-for="Fecha" class="form-control" />
            <span asp-validation-for="Fecha" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Descripci√≥n</label>
            <input asp-for="Descripcion" class="form-control" />
        </div>
        <div class="form-group">
            <label>Precio</label>
            <input asp-for="Precio" class="form-control" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Cantidad</label>
            <input asp-for="Cantidad" class="form-control" />
            <span asp-validation-for="Cantidad" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-md-6">
                <label>Imagen actual</label><br />
                @if (!string.IsNullOrEmpty(Model.ImagenRuta))
                {
                    <img src="@Model.ImagenRuta" alt="Imagen actual" style="max-height:200px; max-width:100%; object-fit:contain;" />
                }
                else
                {
                    <p><em>No hay imagen</em></p>
                }
            </div>
            <div class="col-md-6">
                <label>Nueva imagen (opcional)</label>
                <input type="file" name="Imagen" class="form-control" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Guardar cambios</button>
    </form>

</div>