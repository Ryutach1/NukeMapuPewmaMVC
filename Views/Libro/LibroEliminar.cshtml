@model ProyectoNukeMapuPewmaMVC.Models.Libro;
@{
    ViewData["Title"] = "Eliminar Libro";
}


<div class="text-central">
    <h1 class="display-4">Eliminar Libro</h1>
    <h3>¿Estás seguro que deseas eliminar este libro?</h3>
    <hr/>

    
    <div>
        <h4>Detalles del libro</h4>
        <br>
        <dl class="row">
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@Model.Nombre</dd>

            <dt class="col-sm-2">Autor</dt>
            <dd class="col-sm-10">@Model.Autor</dd>
            
            <dt class="col-sm-2">Editorial</dt>
            <dd class="col-sm-10">@Model.Editorial</dd>

            <dt class="col-sm-2">Categoria</dt>
            <dd class="col-sm-10">@Model.Categoria</dd>

            <dt class="col-sm-2">Fecha</dt>
            <dd class="col-sm-10">@Model.Fecha</dd>

            <dt class="col-sm-2">Descripción</dt>
            <dd class="col-sm-10">@Model.Descripcion</dd>
            
            <dt class="col-sm-2">Precio</dt>
            <dd class="col-sm-10">@Model.Precio</dd>
            
            <dt class="col-sm-2">Cantidad</dt>
            <dd class="col-sm-10">@Model.Cantidad</dd>
        </dl>
        
        <form asp-action="LibroEliminar" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Libro" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>