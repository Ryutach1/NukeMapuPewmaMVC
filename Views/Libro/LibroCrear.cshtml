@model ProyectoNukeMapuPewmaMVC.Models.Libro;
@{
    ViewData["Title"] = "Crear Libros";
}


<div class="text-central">
    <h1 class="display-4">Formulario de inscripción de nuevos libros</h1>
    @*Se requiere de LibroController = debe haber una operacion con<<: asp-action="""""CrearArtesania"""""*@

    <form asp-action="LibroCrear" method="post">  
    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" placeholder="Nombre del título" />
    </div>
    <div class="form-group">
        <label>Autor</label>
        <input asp-for="Autor" class="form-control" placeholder="Nombre del autor de la obra"/>
    </div>
    <div class="form-group">
        <label>Editorial</label>
        <input asp-for="Editorial" class="form-control" placeholder="Editorial que lo publica" />
    </div>
    <div class="form-row d-flex">
    <div class="form-group col-md-6 me-2">
        <label>Categoria</label>
        <input asp-for="Categoria" class="form-control" placeholder="Género al que pertenece" />
    </div>
    <div class="form-group col-md-6">
        <label>Año de publicación</label>
        <input asp-for="Fecha" class="form-control" placeholder="Año de publicación de la edición"/>
    </div>
    </div>
    <div class="form-group">
        <label>Descripción</label>
        <input asp-for="Descripcion" placeholder="Número de edición, datos de adquisición, resumen argumental" class="form-control" />
    <div class="form-row d-flex">
    <div class="form-group col-md-6 me-2">
        <label>Precio</label>
        <div class="input-group">
            <span class="input-group-text">CLP $</span>
            <input asp-for="Precio" type="number" class="form-control" placeholder="Precio en CLP" />
        </div>
    </div>
    <div class="form-group col-md-6">
        <label>Cantidad</label>
        <input asp-for="Cantidad" type="number" class="form-control" placeholder="Número total de artículos" />
    </div>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

</div>
