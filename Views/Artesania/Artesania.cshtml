@model IEnumerable<ProyectoNukeMapuPewmaMVC.Models.Artesania>

@{
    ViewData["Title"] = "Artesanía";
}

@if (TempData["ArtesaniaMensaje"] != null)
{
    <div class="alert alert-success">@TempData["ArtesaniaMensaje"]</div>
}


<div class="text-central">
    <h1 class="display-4">Catálogo de Artesanías Unicas</h1>
    <a asp-area=""  class="btn btn-success" asp-action="ArteCrear">Crear nueva</a>

    <section class="section-table table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any()) 
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Descripcion</td>
                            <td>@item.Precio</td>
                            <td>@item.Cantidad</td>
                            <td>
                                <a asp-controller="Producto" asp-action="Detalle" asp-route-id="@item.Id" asp-route-tipo="Artesania" class="btn btn-secondary">Detalles</a>
                                <a asp-action="ArteEditar" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                                <a asp-action="ArteEliminar" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                } 
                else
                {
                    <tr>
                        <td colspan="4"><strong>No hay productos en la base de datos</strong></td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</div>
