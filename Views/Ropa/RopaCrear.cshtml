@model ProyectoNukeMapuPewmaMVC.Models.Ropa;
@{
    ViewData["Title"] = "Crear Ropas";
}


<div class="text-central">
    <h2 class="display-4">Formulario de inscripción de nuevas prendas</h2>
    @*Se requiere de ArtesaniaController = debe haber una operacion con<<: asp-action="""""CrearArtesania"""""*@

    <form asp-action="RopaCrear" method="post">  
    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-row d-flex">
    <div class="form-group col-md-6 me-3">
        <label>Talla</label>
        <input asp-for="Talla" class="form-control" />
    </div>
    <div class="form-group col-md-6 me-2">
        <label>Precio</label>
        <div class="input-group">
            <span class="input-group-text">CLP $</span>
            <input asp-for="Precio" type="number" class="form-control" placeholder="Precio en CLP" />
        </div>
    </div>
    <div class="form-group col-md-6">
        <label>Cantidad</label>
        <input asp-for="Cantidad" type="number" class="form-control" placeholder="Número total de artículos" />
    </div>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

</div>
