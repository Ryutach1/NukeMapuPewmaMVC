@model ProyectoNukeMapuPewmaMVC.Models.Ropa;
@{
    ViewData["Title"] = "Crear Ropas";
}


<div class="text-central">
    <h2 class="display-4">Formulario de inscripción de nuevas prendas</h2>

    <form asp-action="RopaCrear" method="post" enctype="multipart/form-data">
    <div class="row">
    <div class="form-group col-md-4">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group col-md-4">
        <label>Talla</label>
        <input asp-for="Talla" class="form-control" />
    </div>
    </div>
    <div class="row">
    <div class="form-group col-md-4">
        <label>Precio</label>
        <div class="input-group">
            <span class="input-group-text">CLP $</span>
            <input asp-for="Precio" type="number" class="form-control" placeholder="Precio en CLP" />
        </div>
    </div>
    <div class="form-group col-md-4">
        <label>Cantidad</label>
        <input asp-for="Cantidad" type="number" class="form-control" placeholder="Número total de artículos" />
    </div>
    <div class="form-group col-md-4">
        <label>Estado</label>
        <select asp-for="Estado" class="form-control">
                    <option value="">Seleccione una opción</option>
                    <option value="Nuevo">Nuevo</option>
                    <option value="Usado">Usado</option>
        </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>
    </div>
    <div class="form-group">
            <label for="Imagen">Imagen</label>
            <input type="file" class="form-control" name="Imagen" />
        </div>
    <br>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

</div>
