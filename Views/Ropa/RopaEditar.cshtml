@model ProyectoNukeMapuPewmaMVC.Models.Ropa;
@{
    ViewData["Title"] = "Modificar Ropa";
}


<div class="text-central">
    <h1 class="display-4">Modificar Prenda</h1>


    <form asp-action="RopaEditar" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label>Nombre</label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Talla</label>
            <input asp-for="Talla" class="form-control" />
        </div>
        <div class="form-group">
            <label>Precio</label>
            <input asp-for="Precio" class="form-control" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Cantidad</label>
            <input asp-for="Cantidad" class="form-control" />
            <span asp-validation-for="Cantidad" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label>Estado</label>
            <select asp-for="Estado" class="form-control">
                <option value="">Seleccione una opci√≥n</option>
                <option value="Nuevo">Nuevo</option>
                <option value="Usado">Usado</option>
            </select>
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-md-6">
                <label>Imagen actual</label><br />
                @if (!string.IsNullOrEmpty(Model.ImagenRuta))
                {
                    <img src="@Model.ImagenRuta" alt="Imagen actual" style="max-height:200px; max-width:100%; object-fit:contain;" />
                }
                else
                {
                    <p><em>No hay imagen</em></p>
                }
            </div>
            <div class="col-md-6">
                <label>Nueva imagen (opcional)</label>
                <input type="file" name="Imagen" class="form-control" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Guardar cambios</button>
    </form>

</div>